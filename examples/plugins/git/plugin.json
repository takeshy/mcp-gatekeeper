{
  "tools": [
    {
      "name": "git-status",
      "description": "Show git repository status",
      "command": "git",
      "args_prefix": ["status"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_type": "log"
    },
    {
      "name": "git-changes",
      "description": "Interactive view of staged/unstaged changes and commit history",
      "command": "git",
      "args_prefix": ["log", "--pretty=format:%H|%h|%an|%ar|%s", "-n", "20"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_template": "templates/changes.html",
      "ui_config": {
        "csp": {
          "resource_domains": ["esm.sh"]
        },
        "visibility": ["model", "app"]
      }
    },
    {
      "name": "git-staged-files",
      "description": "Get list of staged files (app-only)",
      "command": "git",
      "args_prefix": ["diff", "--cached", "--name-status"],
      "allowed_arg_globs": [""],
      "sandbox": "none",
      "ui_config": {
        "visibility": ["app"]
      }
    },
    {
      "name": "git-unstaged-files",
      "description": "Get list of unstaged files (app-only)",
      "command": "git",
      "args_prefix": ["diff", "--name-status"],
      "allowed_arg_globs": [""],
      "sandbox": "none",
      "ui_config": {
        "visibility": ["app"]
      }
    },
    {
      "name": "git-staged-diff",
      "description": "Get staged diff for a file (app-only)",
      "command": "git",
      "args_prefix": ["diff", "--cached", "--"],
      "allowed_arg_globs": ["**"],
      "sandbox": "none",
      "ui_config": {
        "visibility": ["app"]
      }
    },
    {
      "name": "git-unstaged-diff",
      "description": "Get unstaged diff for a file (app-only)",
      "command": "git",
      "args_prefix": ["diff", "--"],
      "allowed_arg_globs": ["**"],
      "sandbox": "none",
      "ui_config": {
        "visibility": ["app"]
      }
    },
    {
      "name": "git-commits",
      "description": "Interactive git commit explorer with file changes and diffs",
      "command": "git",
      "args_prefix": ["log", "--pretty=format:%H|%h|%an|%ar|%s", "-n", "20"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_template": "templates/commits.html",
      "ui_config": {
        "csp": {
          "resource_domains": ["esm.sh"]
        },
        "visibility": ["model", "app"]
      }
    },
    {
      "name": "git-commit-files",
      "description": "Get list of changed files for a commit (app-only)",
      "command": "git",
      "args_prefix": ["diff-tree", "--no-commit-id", "--name-status", "-r"],
      "allowed_arg_globs": ["**"],
      "sandbox": "none",
      "ui_config": {
        "visibility": ["app"]
      }
    },
    {
      "name": "git-file-diff",
      "description": "Get diff for a specific file in a commit (app-only)",
      "command": "git",
      "args_prefix": ["show", "--format="],
      "allowed_arg_globs": ["**"],
      "sandbox": "none",
      "ui_config": {
        "visibility": ["app"]
      }
    },
    {
      "name": "git-log",
      "description": "Show git commit log",
      "command": "git",
      "args_prefix": ["log"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_template": "templates/log.html"
    },
    {
      "name": "git-branch",
      "description": "List git branches",
      "command": "git",
      "args_prefix": ["branch"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_type": "log"
    },
    {
      "name": "git-diff",
      "description": "Show git diff",
      "command": "git",
      "args_prefix": ["diff"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_template": "templates/diff.html"
    },
    {
      "name": "git-stash",
      "description": "List git stashes",
      "command": "git",
      "args_prefix": ["stash", "list"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_type": "log"
    },
    {
      "name": "git-remote",
      "description": "Show git remotes",
      "command": "git",
      "args_prefix": ["remote"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_type": "log"
    },
    {
      "name": "git-tag",
      "description": "List git tags",
      "command": "git",
      "args_prefix": ["tag"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_type": "log"
    },
    {
      "name": "git-show",
      "description": "Show git object details",
      "command": "git",
      "args_prefix": ["show"],
      "allowed_arg_globs": ["", "*"],
      "sandbox": "none",
      "ui_type": "log"
    },
    {
      "name": "git-blame",
      "description": "Show file blame",
      "command": "git",
      "args_prefix": ["blame"],
      "allowed_arg_globs": ["**"],
      "sandbox": "none",
      "ui_type": "log"
    }
  ],
  "allowed_env_keys": ["HOME", "USER", "PATH", "GIT_*", "LANG", "LC_*"]
}
