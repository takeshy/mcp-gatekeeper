{
  "tools": [
    {
      "name": "ls",
      "description": "List directory contents",
      "command": "ls",
      "allowed_arg_globs": ["", "-l", "-la", "-lah", "-a", "*"],
      "sandbox": "bubblewrap",
      "ui_type": "log"
    },
    {
      "name": "ls-table",
      "description": "List directory contents (table view)",
      "command": "ls",
      "allowed_arg_globs": ["", "-l", "-la", "-lah", "-a", "*"],
      "sandbox": "bubblewrap",
      "ui_template": "templates/table.html"
    },
    {
      "name": "cat",
      "description": "Display file contents",
      "command": "cat",
      "allowed_arg_globs": ["*"],
      "sandbox": "bubblewrap",
      "ui_type": "log"
    },
    {
      "name": "find",
      "description": "Search for files",
      "command": "find",
      "allowed_arg_globs": ["*"],
      "sandbox": "bubblewrap",
      "ui_type": "log"
    },
    {
      "name": "grep",
      "description": "Search file contents",
      "command": "grep",
      "allowed_arg_globs": ["*"],
      "sandbox": "bubblewrap",
      "ui_type": "log"
    }
  ],
  "allowed_env_keys": ["HOME", "USER", "PATH", "LANG", "LC_*"]
}
